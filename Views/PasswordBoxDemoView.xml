<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="urn:inkkslinger-ui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="urn:inkkslinger-ui ../Schemas/InkkSlinger.UI.xsd
                                 http://schemas.microsoft.com/winfx/2006/xaml ../Schemas/Xaml2006.xsd"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#0E1826"
             BorderBrush="#2C4A67"
             BorderThickness="1"
             Padding="14">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Label Grid.Row="0"
           Text="PasswordBox Demo"
           Foreground="#EAF6FF"
           Margin="0,0,0,10" />

    <Border Grid.Row="1"
            Background="#101E30"
            BorderBrush="#355878"
            BorderThickness="1"
            Padding="12"
            Margin="0,0,0,10">
      <StackPanel>
        <Label Text="Password Input" Foreground="#D2E9FF" Margin="0,0,0,6" />
        <PasswordBox x:Name="PasswordInput"
                     Height="34"
                     MaxLength="24"
                     Background="#0C1623"
                     BorderBrush="#446A8E"
                     BorderThickness="1"
                     PasswordChanged="OnPasswordChanged" />

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
          <CheckBox x:Name="RevealCheck" Text="Reveal" Click="OnRevealClick" Margin="0,0,12,0" />
          <CheckBox x:Name="ReadOnlyCheck" Text="Read only" Click="OnReadOnlyClick" Margin="0,0,12,0" />
          <CheckBox x:Name="AllowCopyCheck" Text="Allow copy" Click="OnAllowCopyClick" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
          <Button Text="Mask: •" Click="OnMaskDotClick" Margin="0,0,8,0" />
          <Button Text="Mask: *" Click="OnMaskStarClick" Margin="0,0,8,0" />
          <Button Text="Clear" Click="OnClearClick" Margin="0,0,8,0" />
          <Button Text="Set Sample" Click="OnSetSampleClick" />
        </StackPanel>
      </StackPanel>
    </Border>

    <Border Grid.Row="2"
            Background="#101E30"
            BorderBrush="#355878"
            BorderThickness="1"
            Padding="10"
            Margin="0,0,0,10">
      <Label x:Name="StatusLabel" Text="Ready." Foreground="#BFE0FF" TextWrapping="Wrap" />
    </Border>

    <Border Grid.Row="3"
            Background="#0B1421"
            BorderBrush="#2E4D6B"
            BorderThickness="1"
            Padding="8">
      <TextBox x:Name="EventLogBox"
               TextWrapping="Wrap"
               IsReadOnly="True"
               VerticalScrollBarVisibility="Auto"
               Height="260"
               Background="#0B1421"
               BorderBrush="#2E4D6B"
               BorderThickness="1"
               Padding="8" />
    </Border>
  </Grid>
</UserControl>

